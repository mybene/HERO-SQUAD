{{#partial "content"}}

    <div class="card" id="inputHero">
        <form class="form" action="/new/hero" method="post">
            <div class="form-group row">
                <label for="name" class="col-sm-2 col-form-label">Hero's name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="name" placeholder="Enter name of hero">
                </div>
            </div>

            <div class="form-group row">
                <label for="age" class="col-sm-2 col-form-label">Hero's age</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" id="age" placeholder="Enter age of hero"
                </div>
            </div>

            <div class="form-group row">
                <label for="power" class="col-sm-4 col-form-label">Hero's power</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="name" placeholder="Enter power of hero">
                </div>
            </div>

            <div class="form-group row">
                <label for="weakness" class="col-sm-4 col-form-label">Hero's weakness</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="name" placeholder="Enter weakness of hero">
                </div>
            </div>


        </form>
        <input clas="btns" type="submit">

    </div>
    {{/partial}}
{{>layout.hbs}}